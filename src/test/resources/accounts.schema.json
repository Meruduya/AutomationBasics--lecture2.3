{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["args", "headers", "url"],
  "properties": {
    "args": {
      "type": "object",
      "patternProperties": {
        "^.*$": { "type": "string" }
      }
    },
    "headers": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "url": {
      "type": "string",
      "format": "uri"
    }
  }
}